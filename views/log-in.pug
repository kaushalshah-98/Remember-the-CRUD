extends layout.pug

include utils.pug

block content


    body
        div.left
            .quotebox
                div#quote “Any fool can write code that a computer can understand. Good programmers write code that humans can understand.”
                div#author – Martin Fowler
    body
        div.right
                div#signupButton
                    button#loginFromSignUp: a#loginFromSignUpLink(href="/users/signup") Sign up for free
                div.form
                    div#formBox
                        +validationErrorSummary(errors)
                        form(action="/users/login" method="POST")
                            input(type="hidden" name="_csrf" value=csrfToken)
                            p Been here before? Welcome back!
                            label(for="email")
                            input(type="text" value placeholder= "Email or username" name="email").formField
                            br
                            label(for="password")
                            input(type="password" value placeholder= "Password" name="password").formField
                            br
                            input(type="checkbox" name="stayLoggedIn").formField#stayLogged
                            label(for="stayLoggedIn")#stayLoggedText Stay logged In
                            br
                            button.formField#loginButton Log in
