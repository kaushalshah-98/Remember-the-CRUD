doctype html
head
  title= `${title}`
  link(rel='stylesheet' href="/stylesheets/tasks.css")
  script(type='text/javascript' src='/javascripts/tasks-function.js')
body
  div#navbartasks
    img#hamburger(src="/images/Hamburger_icon.png")
    div#navButtonsTasks
      button#logoutButton: a#logoutLink(href="/users/logout") Logout
  div#largestboxtasks
    div#sidebartasks--open
      img#logo(src="/images/logo-trans-final.png")
      div#taskslistsorts
        div#tasksorts
          img#ddownarrow-tasks(src="/images/blue-ddown-arrow.PNG")
          div#options1
            p#alltasks="All Tasks"
            ul#options1list
              li.alltaskoptions-open= "Inbox"
              li.alltaskoptions-open= "Today"
              li.alltaskoptions-open= "Tomorrow"
              li.alltaskoptions-open= "This Week"
              li.alltaskoptions-open= "Trash"
        div#listsorts
          img#ddownarrow-lists(src="/images/blue-dright-arrow.PNG")
          div#options2
            p#alllists="Lists"
            ul#options2list
              li.alllistoptions-open= "Work"
              li.alllistoptions-open= "Personal"
        div#tagsorts
          img#ddownarrow-tags(src="/images/blue-dright-arrow.PNG")
          div#options3
            p#alltags="Tags"
            ul#options3list
              li.alltagoptions-open= "Work"
              li.alltagoptions-open= "Personal"
        div#languagesorts
          img#ddownarrow-languages(src="/images/blue-dright-arrow.PNG")
          div#options4
            p#alllanguages="Languages"
            ul#options4list
              li.alllanguageoptions-open= "JavaScript"
              li.alllanguageoptions-open= "Python"
              li.alllanguageoptions-open= "HTML"
              li.alllanguageoptions-open= "CSS"
              li.alllanguageoptions-open= "C#"
    div#mainboxtasks
      div#tasks-view
        div#tasks-form
          form(action="/users/tasks" method="POST")#form
              input(type="hidden" name="_csrf" value=csrfToken)
              input(type="text" value placeholder="Add a task..." name="taskName")#tasks-input
              div#test-div
                select(name="langId" required).attribute.task-hidden
                      each language in languages
                          option(value=language.id)=language.name
                select(name="listId" required).attribute.task-hidden
                      each list in lists
                          option(value=list.id)=list.name
                input(type="integer" value=0 name="estTime").attribute.task-hidden
                input(type="date" name="startDate").attribute.task-hidden
                input(type="date" name="dueDate").attribute.task-hidden
                input(type="checkbox" name="priority").attribute.task-hidden
                input(type="checkbox" name="backlog").attribute.task-hidden
                input(type="checkbox" name="sprintBacklog").attribute.task-hidden
                input(type="checkbox" name="inProgress").attribute.task-hidden
                input(type="checkbox" name="complete").attribute.task-hidden
                button#tasks-button.task-hidden(disabled) Add Task
        div#tasks-container
          if (tasks)
            each task in tasks
              li.mainTaskList= task.taskName
      div#tasks-summary
